<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Noteflow.ViewModels"
             x:Class="Noteflow.Views.CardSectionView"
             x:DataType="vm:CardSectionViewModel">
    <UserControl.DataContext>
        <vm:CardSectionViewModel />
    </UserControl.DataContext>
    <StackPanel>
      <ListBox ItemsSource="{Binding Cards}">
    <ListBox.ItemTemplate>
        <DataTemplate>
            <StackPanel>
                        <TextBlock Text="{Binding Front}" FontWeight="Bold" />
                        <TextBlock Text="{Binding Back}"/>
                        <TextBlock Text="{Binding Category}" FontStyle="Italic"  />
                    </StackPanel>
        </DataTemplate>
    </ListBox.ItemTemplate>
</ListBox>
        <Button Content="Save Cards" Command="{Binding SaveCardsCommand}" />
    </StackPanel>
</UserControl>