<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Noteflow.ViewModels"
             x:Class="Noteflow.Views.CardSectionView"
             x:DataType="vm:CardSectionViewModel"
             HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">


    <ScrollViewer>
        <ItemsControl ItemsSource="{Binding Cards}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Expander Header="{Binding Front}" HorizontalAlignment="Stretch" Margin="10,5">
                        <StackPanel>
                            <TextBlock Text="{Binding Back}" />
                            <TextBlock Text="{Binding Category, StringFormat='Kategorie: {0}'}" />
                        </StackPanel>
                    </Expander>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>