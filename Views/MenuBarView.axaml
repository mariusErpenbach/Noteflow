<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Noteflow.ViewModels"
             x:Class="Noteflow.Views.MenuBarView"
             x:DataType="vm:MenuBarViewModel">
    
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="red" Height="30">
            <MenuItem Header="Einstellungen"> </MenuItem>
            <MenuItem Header="Bank" Command="{Binding EditBankCommand}">
                <MenuItem Header="New Card" Command="{Binding NewCardCommand}" />
                <MenuItem Header="Delete Card" Command="{Binding DeleteCardCommand}" />
            </MenuItem>
            <MenuItem Header="Hilfe anzeigen" Command="{Binding ShowHelpCommand}" />
        </Menu>
    </DockPanel>
</UserControl>