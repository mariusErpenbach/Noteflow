<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Noteflow.ViewModels"
             x:Class="Noteflow.Views.NewCardFormularView"
             x:DataType="vm:NewCardFormularViewModel">
    
    <StackPanel>
        <TextBox Watermark="Front" Text="{Binding Front}" />
        <TextBox Watermark="Back" Text="{Binding Back}" />
        <TextBox Watermark="Category" Text="{Binding Category}" />
        <Button Content="Speichern" Command="{Binding SaveCommand}" />
    </StackPanel>
</UserControl>